        <module>commonslb-rows</module>
        <module>commonslb-graphtheory</module>
        <module>commonslb-jpa</module>
        <module>commonslb-reflection</module>
        <module>commonslb-email</module>
        <module>commonslb-tests</module>
    </modules>
    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>
    <dependencyManagement>
        <dependencies>
