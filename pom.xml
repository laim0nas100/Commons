            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-misc</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-datasync</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-rows</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-collections</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-lexing</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-io</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-threads</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-jpa</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-refmodel</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-javafx</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-reflection</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-email</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-tests</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-log</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-jobs</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            <dependency>
                <groupId>lt.lb.commons</groupId>
                <artifactId>commonslb-caching</artifactId>
                <version>${project.production.version}</version>
            </dependency>
            
            <dependency>
                <groupId>com.github.laim0nas100</groupId>
                <artifactId>FastID</artifactId>
                <version>1.0.1</version>
            </dependency>
            
            
            <dependency>
                <groupId>javax.persistence</groupId>
                <artifactId>javax.persistence-api</artifactId>
                <version>2.2</version>
            </dependency>
            
            
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${apache.commons.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-collections4</artifactId>
